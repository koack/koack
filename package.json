{
  "name": "koack",
  "private": true,
  "version": "0.0.5",
  "description": "Core brick to build Slack bots",
  "keywords": ["bots", "chatbots", "slack"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "contributors": ["Julien Tilap LA VINH <jlaving@gmail.com>"],
  "license": "ISC",
  "repository": "git@github.com:koack/koack.git",
  "homepage": "https://github.com/koack/koack",
  "engines": {
    "node": ">=6.5.0"
  },
  "workspaces": ["packages/*"],
  "main": "./index.js",
  "module:node": "./lib-module-node7/index.js",
  "module:node-dev": "./lib-module-node7-dev/index.js",
  "module:aliases-node": {
    "./message-events-router.js": "./lib-module-node7/message-events-router.js",
    "./message-router.js": "./lib-module-node7/message-router.js",
    "./bot.js": "./lib-module-node7/bot.js",
    "./pool.js": "./lib-module-node7/pool.js",
    "./server.js": "./lib-module-node7/server.js"
  },
  "module:aliases-node-dev": {
    "./message-events-router.js": "./lib-module-node7-dev/message-events-router.js",
    "./message-router.js": "./lib-module-node7-dev/message-router.js",
    "./bot.js": "./lib-module-node7-dev/bot.js",
    "./pool.js": "./lib-module-node7-dev/pool.js",
    "./server.js": "./lib-module-node7-dev/server.js"
  },
  "scripts": {
    "build": "lerna run --ignore \"*-example\" build",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "generate:api":
      "rm -Rf docs/ ; mkdir docs/ ; pob-build doc ; jsdoc README.md lib-doc --recurse --destination docs/ --configure jsdoc.conf.json ; rm -Rf lib-doc",
    "generate:docs": "lerna run --parallel --ignore \"*-example\" generate:docs",
    "generate:test-coverage":
      "rm -Rf coverage/ ; NODE_ENV=production POBREGISTER_ONLY=./test node node_modules/istanbul/lib/cli.js cover node_modules/.bin/_mocha -- --require pob-babel/register --recursive --bail -u tdd test",
    "lint": "lerna run --stream lint",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && yarn run build && yarn run generate:docs",
    "release": "lerna publish --conventional-commits -m 'chore: release'",
    "test": "lerna run --stream test",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "lint-staged": {
    "{package.json,packages/*/package.json,,.eslintrc.json}": ["prettier --write", "git add"],
    "packages/*/lib/**/*.json": ["prettier --write", "git add"],
    "packages/*/lib/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "husky": "^0.14.3",
    "lerna": "3.0.0-beta.21",
    "lint-staged": "^7.2.0",
    "pob-release": "^4.1.2",
    "yarnhook": "^0.2.0"
  }
}
